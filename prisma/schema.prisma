generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String @unique
  role  String
}

model Factory {
  id       String @id @default(uuid())
  name     String
  capacity Int
}

model Order {
  id        String @id @default(uuid())
  userId   String
  factoryId String
  status   String
}